<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment_addGesture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addingGestures_frag">

    <!-- Hand Sign Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_hand_sign_fragment_fragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/label_hand_sign_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hand Signs"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_hand_sign_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/loading_icon" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</FrameLayout>