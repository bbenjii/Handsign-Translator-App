<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment_addGesture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".addingGestures_frag">

    <!-- Hand Sign Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_hand_sign_fragment_fragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/label_hand_sign_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hand Signs"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_hand_sign_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/loading_icon" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="287dp"
            android:layout_height="38dp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Enter new gesture ouput"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.647" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>